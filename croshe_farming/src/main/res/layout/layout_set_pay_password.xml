<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/item_head"/>
    </LinearLayout>
    <LinearLayout
        android:background="@color/colorbaise"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">
        <EditText
            android:id="@+id/edit_set_payword"
            android:inputType="number"
            android:maxLength="6"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:hint="请设置您的支付密码"
            android:background="@android:color/transparent"
            android:layout_marginLeft="10dp"
            android:textSize="14sp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <LinearLayout
        android:background="@color/colorbaise"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">
        <EditText
            android:id="@+id/edit_user_phone"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:hint="手机号"
            android:layout_marginLeft="10dp"
            android:textSize="14sp"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/bt_payword_yz"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/head_backgoun1"
                android:text="获取验证码"
                android:textColor="#ffffff"
                android:textSize="14sp" />

            <Button
                android:id="@+id/bt_payword_js"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/head_backgoun1"
                android:text="60"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:visibility="gone" />
        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:background="@color/colorbaise"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">
        <EditText
            android:id="@+id/edit_payword_code"
            android:inputType="number"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:hint="输入短信验证码"
            android:background="@android:color/transparent"
            android:layout_marginLeft="10dp"
            android:textSize="14sp"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_qd_payword"
        android:gravity="center"
        android:background="@drawable/bg_orange_5"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:text="确定"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
