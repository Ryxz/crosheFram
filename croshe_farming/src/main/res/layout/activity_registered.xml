<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.croshe.farming.Login.LoginActivity"
    android:orientation="vertical"
    android:background="@color/colorhuise"
    android:gravity="center_horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"

        android:background="@android:color/holo_orange_dark"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_left"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/back_1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="完善个人信息"
            android:textSize="16sp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/colorbaise" />

        </LinearLayout>

    <ImageView
        android:id="@+id/iv_tianjiatongxiang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:src="@mipmap/yonghuitouxiang" />

    <LinearLayout

        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/colorbaise"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@mipmap/nickname"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵称"
            android:textColor="@color/colorAccent"/>

        <EditText
            android:id="@+id/et_nicheng"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:textSize="14sp" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorhuise"></LinearLayout>
    <LinearLayout
        android:id="@+id/ll_birthda_1"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/colorbaise"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@mipmap/youxiang"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="邮箱"
            android:textColor="@color/colorAccent"/>
        <EditText
            android:id="@+id/et_youxiang"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:layout_marginLeft="40dp"
            android:textSize="14sp"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorhuise"></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/colorbaise"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@mipmap/pwd"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码"
            android:textColor="@color/colorAccent"/>

        <EditText
            android:id="@+id/et_mima"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:hint="请设置密码（不少于6位）"
            android:textSize="14sp"
            android:inputType="textPassword"/>

        <ImageView
            android:id="@+id/yingcangmima"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/keijian"
            android:layout_marginRight="12dp"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorhuise"></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/colorbaise"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@mipmap/genber"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="性别"
            android:textColor="@color/colorAccent"/>
        <Button
            android:id="@+id/bt_man"
            android:layout_marginLeft="40dp"
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:text="男"
            android:textColor="@color/colorbaise"
            android:background="@drawable/head_backgoun1"/>
        <LinearLayout
            android:layout_marginLeft="15dp"
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:background="@color/colorhuise">

        </LinearLayout>
        <Button
            android:id="@+id/bt_nv"
            android:layout_marginLeft="15dp"
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:text="女"
            android:background="@drawable/my_shape_3"/>
    </LinearLayout>


    <Button
        android:id="@+id/bt_zhuce"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/head_backgound"
        android:text="注册"
        android:textColor="#ffffff"
        android:textSize="18sp" />
    <CheckBox
        android:layout_marginTop="10dp"
        android:id="@+id/cb_fuwu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/colorhongse"
        android:text="我已阅读并同意《用户服务协议》"/>

</LinearLayout>
