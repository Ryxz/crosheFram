<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorhuise">

    <LinearLayout
        android:id="@+id/ll_all_address"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:id="@+id/text_receive_name"
                android:text="姓名"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:gravity="right"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/text_phone_01"
                    android:text="123"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:visibility="gone"
                    android:text="****"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:visibility="gone"
                    android:id="@+id/text_phone_02"
                    android:text="5677"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:id="@+id/text_receive_address"
                android:text="地址"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:background="@color/colorhuise"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
        <LinearLayout
            android:visibility="visible"
            android:id="@+id/ll_equal_address"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <LinearLayout
                android:id="@+id/ll_select_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/img_unselect_adr"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/img_unselect_address"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
                <ImageView
                    android:id="@+id/img_select_adr"
                    android:visibility="gone"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/img_select_address"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
                <TextView
                    android:text="设为默认地址"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_moren_address" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="right|center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/img_edit"
                    android:src="@mipmap/img_edit"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
                <View
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@color/orange"
                    android:layout_width="1px"
                    android:layout_height="30dp"/>
                <ImageView
                    android:id="@+id/img_delete"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/img_delete"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_service_message"
            android:visibility="gone"
            android:gravity="right|center_vertical"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="20dp">
            <TextView
                android:text="系统默认地址"
                android:textSize="14sp"
                android:textColor="@color/orange"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
