<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_pesticide_1"
            android:text="杀虫剂"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"

            android:textColor="@color/colorPrimary"
            android:background="@drawable/back_seeds"/>
        <TextView
            android:id="@+id/tv_pesticide_2"
            android:layout_marginLeft="10dp"
            android:text="胃毒剂"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:textColor="@color/colorAccent"
            android:background="@drawable/back_seeds"/>
        <TextView
            android:id="@+id/tv_pesticide_3"
            android:layout_marginLeft="10dp"
            android:text="内吸剂"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:textColor="@color/colorAccent"
            android:background="@drawable/back_seeds"/>

        <TextView
            android:id="@+id/tv_pesticide_4"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/back_seeds"
            android:gravity="center"
            android:text="杀菌剂"
            android:textColor="@color/colorAccent" />

        <LinearLayout
            android:id="@+id/tv_all_3"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"

            android:background="@drawable/back_seeds">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:text="全部"/>
            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@mipmap/icon"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorhuise1"></LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/tv_re_lei_3"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">
    </android.support.v7.widget.RecyclerView>

</LinearLayout>

