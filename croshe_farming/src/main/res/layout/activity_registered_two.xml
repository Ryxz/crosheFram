<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.croshe.farming.Login.LoginActivity"
    android:orientation="vertical"
    android:background="@color/colorhuise"
    android:gravity="center_horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@android:color/holo_orange_dark"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_left_1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/back_1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册"
            android:textSize="16sp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/colorbaise" />

        </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorbaise"
        android:gravity="center_vertical">


        <EditText
            android:id="@+id/et_psweed_2"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:hint="手机号码"
            android:textSize="14sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:visibility="visible"
                android:id="@+id/bt_yanzhenma_2"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/head_backgoun1"
                android:text="获取验证码"
                android:textColor="#ffffff"
                android:textSize="14sp" />

            <Button
                android:id="@+id/bt_daojishi"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/head_backgoun1"
                android:text="重新发送(60)"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:visibility="gone" />
        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="1px"
        android:background="@color/colorbaise"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/et_yaoqingma"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:hint="验证码"
            android:inputType="number"
            android:textSize="14sp" />
    </LinearLayout>

    <Button
        android:id="@+id/button_xiayibu"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/head_backgound"
        android:text="下一步"
        android:textColor="@color/colorbaise"
        android:textSize="16sp" />

    <CheckBox
        android:id="@+id/cb_my"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我已同意《用户服务协议》"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorhongse"
        android:textSize="12sp"/>
</LinearLayout>
