<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/holo_orange_dark"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center">
            <ImageView
                android:id="@+id/img_account_back"
                android:src="@mipmap/back_1"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <ImageView
                android:visibility="gone"
                android:id="@+id/img_account_finish"
                android:src="@mipmap/img_finish"
                android:layout_width="20dp"
                android:layout_height="20dp" />
        </LinearLayout>



        <TextView
            android:id="@+id/text_account_head"
            android:textSize="16sp"
            android:text="账户安全"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:id="@+id/text_account01"
            android:text="选择修改方式"
            android:textSize="14sp"
            android:textColor="@android:color/holo_orange_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_margin="5dp"
            android:src="@mipmap/img_arror"
            android:layout_width="18dp"
            android:layout_height="15dp" />
        <TextView
            android:textSize="14sp"
            android:id="@+id/text_account02"
            android:text="安全检测"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_margin="5dp"
            android:src="@mipmap/img_arror"
            android:layout_width="18dp"
            android:layout_height="15dp"/>

        <TextView
            android:textSize="14sp"
            android:id="@+id/text_account03"
            android:text="修改密码/账号"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:visibility="visible"
        android:id="@+id/ll_account_01"
        android:background="@color/colorhuise"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:background="@drawable/back_white"
            android:layout_marginTop="40dp"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_marginTop="40dp"
                android:layout_marginLeft="50dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:text="修改登录密码"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_marginRight="40dp">
                    <LinearLayout
                        android:id="@+id/ll_select01"
                        android:background="@mipmap/img_unselect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center">
                        <ImageView
                            android:id="@+id/img_select01"
                            android:src="@mipmap/img_select"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="30dp"
                android:layout_marginLeft="50dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:text="修改绑定手机号"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_marginRight="40dp">
                    <LinearLayout
                        android:id="@+id/ll_select02"
                        android:background="@mipmap/img_unselect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center">
                        <ImageView
                            android:id="@+id/img_select02"
                            android:visibility="gone"
                            android:src="@mipmap/img_select"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="30dp"
                android:layout_marginLeft="50dp"
                android:layout_marginBottom="50dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:text="修改绑定邮箱账号"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_marginRight="40dp">
                    <LinearLayout
                        android:id="@+id/ll_select03"
                        android:background="@mipmap/img_unselect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center">
                        <ImageView
                            android:id="@+id/img_select03"
                            android:visibility="gone"
                            android:src="@mipmap/img_select"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_change"
                android:layout_gravity="center"
                android:background="@drawable/btn_account"
                android:layout_width="110dp"
                android:layout_marginBottom="40dp"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:layout_margin="10dp"
                    android:text="立即修改"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView5" />
            </LinearLayout>
        </LinearLayout>
        <View
            android:visibility="gone"
            android:layout_marginRight="52dp"
            android:layout_marginLeft="52dp"
            android:background="@color/colorhuise2"
            android:layout_width="match_parent"
            android:layout_height="3dp"></View>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_account_02"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorhuise"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <TextView
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            android:text="为确保是你本人，请完成以下验证"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:text="我们已经发送验证码到你的手机 :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:id="@+id/text_pwd_01"
                android:text="123"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="****"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/text_pwd_02"
                android:text="5677"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:background="@color/colorhuise1"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <View
                android:layout_marginLeft="2dp"
                android:background="@color/colorhuise1"
                android:layout_width="1px"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <EditText
                    android:id="@+id/edit_reset"
                    android:layout_marginLeft="10dp"
                    android:hint="短信验证码"
                    android:textSize="14sp"
                    android:background="@android:color/transparent"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/text_getsms"
                android:layout_width="125dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">
                <View
                    android:layout_marginRight="10dp"
                    android:background="@color/colorhuise1"
                    android:layout_width="1px"
                    android:layout_height="20dp"/>
                <TextView
                    android:id="@+id/text_yanzehngcode"
                    android:layout_marginRight="10dp"
                    android:textColor="@android:color/holo_orange_dark"
                    android:text="获取短信验证码"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:visibility="gone"
                    android:id="@+id/text_countdown"
                    android:layout_marginRight="10dp"
                    android:textColor="@android:color/holo_orange_dark"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_marginRight="1dp"
                    android:background="@color/colorhuise1"
                    android:layout_width="1px"
                    android:layout_height="match_parent"/>
            </LinearLayout>

        </LinearLayout>
        <View
            android:background="@color/colorhuise1"
            android:layout_width="match_parent"
            android:layout_height="1px"/>

        <LinearLayout
            android:id="@+id/text_next"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_account2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center">
            <TextView
                android:text="下一步"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_account_03"
        android:visibility="gone"
        android:background="@color/colorhuise"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <View
                android:layout_marginLeft="2dp"
                android:background="@color/colorhuise1"
                android:layout_width="1px"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <EditText
                    android:id="@+id/edit_newpwd"
                    android:layout_marginLeft="10dp"
                    android:hint="请输入新密码"
                    android:textSize="14sp"
                    android:background="@android:color/transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>


        </LinearLayout>
        <TextView
            android:id="@+id/text_pwd_remind"
            android:textSize="12sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:text="密码由6-20位英文字母、数字或符号组成"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:id="@+id/ll_determine_newpwd"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_account2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center">
            <TextView
                android:text="确定"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
