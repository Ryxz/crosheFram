<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_xuanze_1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="10dp"
            android:src="@mipmap/weixuanzhong" />

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="100dp">

            <ImageView
                android:id="@+id/iv_buy_1"
                android:layout_width="80dp"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_buy_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorAccent"
                android:textSize="16sp" />
            <LinearLayout
                android:layout_marginTop="5dp"
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_basket"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="全部收获"
                        android:textColor="@color/colorAccent"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/ll_basket"
                        android:layout_width="120dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/alert_gray_5"
                        android:gravity="center"
                        android:padding="2dp">

                        <TextView
                            android:id="@+id/text_area"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="选择收货面积" />

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@mipmap/xiala" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_num_basket"
                        android:layout_width="120dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/alert_gray_5"
                        android:gravity="center"
                        android:padding="2dp"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/text_basket_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="选择收货数量" />

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@mipmap/xiala" />
                    </LinearLayout>

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收获成本："
                    android:textColor="@color/colorAccent" />

                <TextView
                    android:id="@+id/tv_buy_03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorhongse" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorhuise1"></LinearLayout>
</LinearLayout>
