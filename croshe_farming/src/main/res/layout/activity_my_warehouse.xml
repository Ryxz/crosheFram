<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.croshe.farming.PersonalCenter.MyWarehouseActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical">
        <LinearLayout
            android:id="@+id/iv_back_1"
            android:gravity="center"
            android:layout_width="50dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/back_1" />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_my_fram_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的仓库"
            android:textSize="16sp"
            android:textColor="@color/colorbaise"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="right"
            android:layout_weight="1">
            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_message_2"
                android:layout_margin="15dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/img_message"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <LinearLayout
            android:id="@+id/ll_my_cangku"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_my_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的农资"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/tv_my_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(0)"
                android:textColor="@color/colorPrimary" />
        </LinearLayout>
<LinearLayout
    android:layout_width="1dp"
    android:background="@color/colorhuise1"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_height="match_parent"></LinearLayout>
        <LinearLayout
            android:id="@+id/ll_my_cangku_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_my_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的收成"
                android:textColor="@color/colorAccent" />

            <TextView
                android:id="@+id/tv_my_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(0)"
                android:textColor="@color/colorAccent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/colorhuise1"></LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorhuise1"></LinearLayout>
    <fragment
        android:id="@+id/WarehouseFragment01"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:name="com.croshe.farming.fragment.WarehouseFragment01"></fragment>

    <fragment
        android:id="@+id/WarehouseFragment02"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:name="com.croshe.farming.fragment.WarehouseFragment02"></fragment>
</LinearLayout>
